[
    {
        "title":"Login",
        "url":"/login",
        "method":"POST",
        "requestParameters":[
            [
                "username",
                "password"
            ]
        ],
        "response":[
            {
                "type":"success",
                "msg":["Success"],
                "apiKey":""
            },
            {
                "type":"error",
                "msg":["Invalid username or password"," Failed to log in"]
            }
        ]
    },
    {
        "title":"Account Creation",
        "url":"/createAccount",
        "method":"POST",
        "requestParameters":[
            [
                "username",
                "password",
                "emailAddress"
            ]
        ],
        "response":[
            {
                "type":"success",
                "msg":[
                    "Account created successfully"
                ],
                "apiKey":"${apiKey} : generated apiKey for user"

